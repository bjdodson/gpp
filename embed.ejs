<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"> 
<head> 
  <title>Embedded Junction Session</title> 

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
  <meta name="viewport" content="width=1024,maximum-scale=1.0" /> 
  <meta name="title" content="Embedded Junction Session" /> 
  <% if(description != undefined) { %>
	<meta name="description" content="Dynamic session embedded from <%= hostname %>.  <%= description %>" /> 
  <% } else { %>
	<meta name="description" content="Dynamic session embedded from <%= hostname %>.  Click to install the Chrome plugin or visit the session.  Visit https://github.com/tpurtell/gpp to find out how to embed your application." /> 
  <% } %>

  <meta property="og:site_name" content="MobiSocial Google+ Embedding" /> 
  <meta property="og:type" content="article" /> 
  <meta property="og:title" content="MobiSocial Google+ Embedding" /> 
  <meta property="og:url" content="<%= server %>/embed?app=<%= app %>" /> 
  <% if(image != undefined) { %>
  	<meta property="og:image" content="<%= image %>" /> 
  <% } else { %>
  	<meta property="og:image" content="<%= server %>/image?app=<%= app %>" /> 
  <% } %>

  <% if(description != undefined) { %>
	<meta property="og:description" content="Dynamic session embedded from <%= hostname %>.  <%= description %>" /> 
  <% } else { %>
	<meta property="og:description" content="Dynamic session embedded from <%= hostname %>.  Click to install the Chrome plugin or visit the session.  Visit https://github.com/tpurtell/gpp to find out how to embed your application." /> 
  <% } %>
  <meta name="keywords" content="social networking" /> 

  <meta http-equiv="refresh" content="0; url=<%= chrome ? server + "/extension" : app_url %>"<>
</head>
<!-- This will be display for a brief second while redirecting -->
<body>
  <center>
    <a href="<%= app_url %>"><img src="<%= server %>/image?app=<%= app %>"></a><br>
    <h1><a href="<%= server %>/extension">Install the plugin</a> for embedding, or click above to go to the application.</h1>
  </center>
</body>
</html>
